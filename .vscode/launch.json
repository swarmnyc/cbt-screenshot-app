  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron",
      "cwd": "${workspaceFolder}/electron",
      "runtimeExecutable": "${workspaceFolder}/electron/node_modules/.bin/electron",
      "args": ["--require", "ts-node/register", "./src/main.ts"],
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": ["${workspaceFolder}/log.txt"]
    }
  ]
}
